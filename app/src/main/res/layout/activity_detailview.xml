<?xml version="1.0" encoding="utf-8"?>
<!-- 상세페이지 화면 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Content.DetailViewActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgViewMain"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            tools:srcCompat="@tools:sample/avatars" />

        <androidx.cardview.widget.CardView
            android:layout_marginTop="350dp"
            card_view:cardCornerRadius="30dp"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="35dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/category"
                    android:gravity="center|left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="#공구 #나눔" />

                <TextView
                    android:id="@+id/hopeArea"
                    android:gravity="center|left"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="위치" />

                <TextView
                    android:id="@+id/title"
                    android:gravity="center|left"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="제목"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/user_id"
                    android:gravity="center|right"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="아이디"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    android:textSize="12dp" />

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="10dp"
                    card_view:cardCornerRadius="10dp"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent">

                    <TextView
                        android:id="@+id/content"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="16dp"
                        android:background="#FEF8FF"
                        android:gravity="center|left"
                        android:text="내용"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="20dp" />

                </androidx.cardview.widget.CardView>



            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:backgroundTint="#94EFEFEF"
            card_view:cardCornerRadius="1dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/likeIcon"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/heart_drawable" />

                <Button
                    android:id="@+id/goToChat"
                    android:layout_marginLeft="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="채팅" />

                <Button
                    android:id="@+id/okBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:text="참여" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </FrameLayout>


</LinearLayout>