<?xml version="1.0" encoding="utf-8"?>
<!-- 공동구매 게시물 작성 화면 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/common_google_signin_btn_text_dark_disabled"
    tools:context=".Content.TogetherWriteActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/backBtn2"
            android:layout_width="60dp"
            android:layout_height="39dp"
            android:layout_marginTop="11dp"
            android:backgroundTint="#00000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/titleTog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="50dp"
            android:text="공동 구매"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        card_view:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:orientation="vertical"
                android:padding="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    card_view:cardCornerRadius="5dp"
                    android:backgroundTint="@color/purple_200">

                    <ImageButton
                        android:id="@+id/togImgPlus1"
                        android:layout_width="98dp"
                        android:layout_height="98dp"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:src="@drawable/ic_baseline_add_photo_alternate_24"
                        app:tint="@color/purple_200" />

                    <Button
                        android:id="@+id/togImgPlusBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="사진 추가"
                        android:textSize="10dp"/>

                </androidx.cardview.widget.CardView>>
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="9">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="글 제목"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/togTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="제품명을 추가하여 제목을 작성해주세요"
                        android:textSize="12sp"
                        android:backgroundTint="@color/purple_200"
                        android:textCursorDrawable="@drawable/cursor_drawable"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="상품명"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="상품명"
                        android:textSize="12sp"
                        android:backgroundTint="@color/purple_200"
                        android:textCursorDrawable="@drawable/cursor_drawable"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="카테고리"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="#간식 #사이트공구"
                        android:textSize="12sp"
                        android:backgroundTint="@color/purple_200"
                        android:textCursorDrawable="@drawable/cursor_drawable"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="📍 공구 희망 지역"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/hopeArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="노원구 공릉2동"
                        android:textSize="12sp"
                        android:backgroundTint="@color/purple_200"
                        android:textCursorDrawable="@drawable/cursor_drawable"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="거래 방식"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/howTrans"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="거래방식(직거래/택배거래)"
                        android:textSize="12sp"
                        android:backgroundTint="@color/purple_200"
                        android:textCursorDrawable="@drawable/cursor_drawable"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="상세 내용"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/content3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="상세한 설명 부탁드립니다."
                        android:textSize="12sp"
                        android:backgroundTint="@color/purple_200"
                        android:textCursorDrawable="@drawable/cursor_drawable"/>
                </LinearLayout>


            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <ImageButton
                    android:id="@+id/togetherRegisterButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#F6F5F5"
                    android:src="@drawable/ic_baseline_create_24"
                    app:tint="@color/purple_200" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>