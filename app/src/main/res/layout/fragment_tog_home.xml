<?xml version="1.0" encoding="utf-8"?>
<!-- 홈 상단 공구 이벤트 화면 -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F0ECF1"
    tools:context=".HomePages.TogHomeFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_tog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem ="@layout/item_tog_list"
            android:clickable="true"
            android:layout_marginBottom="56dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/tog_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="76dp"
            android:layout_marginRight="16dp"
            android:backgroundTint="@color/white"
            app:borderWidth="0dp"
            android:src="@drawable/tog_font"
            app:fabSize="normal"
            app:layout_constraintBottom_toBottomOf="@+id/fab_btn"
            app:layout_constraintEnd_toEndOf="@+id/fab_btn"
            app:layout_constraintStart_toStartOf="@+id/fab_btn"
            app:layout_constraintTop_toTopOf="@+id/fab_btn" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/per_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="76dp"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toTopOf="@+id/fab_btn"
            app:layout_constraintBottom_toBottomOf="@+id/fab_btn"
            app:layout_constraintStart_toStartOf="@+id/fab_btn"
            app:layout_constraintEnd_toEndOf="@+id/fab_btn"
            android:backgroundTint="@color/white"
            app:borderWidth="0dp"
            android:src="@drawable/per_font"
            android:layout_gravity="bottom|right"
            app:fabSize="normal" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fav_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="76dp"
            android:layout_marginRight="16dp"
            android:backgroundTint="@color/purple_200"
            app:tint="@android:color/white"
            app:borderWidth="0dp"
            android:src="@drawable/ic_baseline_create_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="bottom|right" />


    </FrameLayout>

</FrameLayout>