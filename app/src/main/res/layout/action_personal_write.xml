<?xml version="1.0" encoding="utf-8"?>
<!-- 개인나눔 게시물 작성 화면 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_dark_disabled"
    android:orientation="vertical"
    tools:context=".Content.PersonalWriteActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:backgroundTint="#EFEFEF"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginTop="11dp"
            android:backgroundTint="#00000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="50dp"
            android:text="개인 나눔"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        card_view:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:orientation="vertical"
                android:padding="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    card_view:cardCornerRadius="5dp"
                    android:backgroundTint="@color/purple_200">

                    <ImageButton
                        android:id="@+id/perImgPlus1"
                        android:layout_width="98dp"
                        android:layout_height="98dp"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:src="@drawable/ic_baseline_add_photo_alternate_24"
                        app:tint="@color/purple_200" />

                </androidx.cardview.widget.CardView>>

            </LinearLayout>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="9">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="글 제목"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/perTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/purple_main"
                        android:hint="나눔 물품명을 추가하여 제목을 작성해주세요"
                        android:textCursorDrawable="@drawable/cursor_drawable"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="나눔 물품명"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/product2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/purple_main"
                        android:hint="나눔 물품명"
                        android:textCursorDrawable="@drawable/cursor_drawable"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="나눔 방법"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/methodTrans"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/purple_main"
                        android:hint="거래/나눔/공구"
                        android:textCursorDrawable="@drawable/cursor_drawable"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="카테고리"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/category2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/purple_main"
                        android:hint="#물물교환 #채소나눔"
                        android:textCursorDrawable="@drawable/cursor_drawable"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="📍나눔 희망 지역"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/hopeArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/purple_main"
                        android:hint="노원구 공릉동"
                        android:textCursorDrawable="@drawable/cursor_drawable"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="거래 방식"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/howTrans"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/purple_main"
                        android:hint="거래방식(직거래/택배거래)"
                        android:textCursorDrawable="@drawable/cursor_drawable"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="상세 내용"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/content2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/purple_main"
                        android:hint="상세한 설명 부탁드립니다."
                        android:textCursorDrawable="@drawable/cursor_drawable"
                        android:textSize="16dp" />
                </LinearLayout>

            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <ImageButton
                    android:id="@+id/personalRegisterButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#F6F5F5"
                    android:src="@drawable/ic_baseline_create_24"
                    app:tint="@color/purple_200" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>