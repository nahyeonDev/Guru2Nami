<?xml version="1.0" encoding="utf-8"?>
<!-- 마이페이지 화면 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.MyPageFragment"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mapNavBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/myPageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="11dp"
            android:text="마이페이지"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/alarm"
            android:layout_width="33dp"
            android:layout_height="32dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_notifications_none_24" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/myPageScrollView"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        app:layout_constraintTop_toBottomOf="@+id/navigationBar"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/userImage"
                android:layout_width="168dp"
                android:layout_height="168dp"
                app:srcCompat="@drawable/ic_baseline_account_circle_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="94dp"
                    android:layout_height="28dp"
                    android:background="@drawable/round_boundary"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="138dp"
                    tools:layout_editor_absoluteY="227dp" />

                <ImageView
                    android:id="@+id/profileSetting"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="12dp"
                    app:layout_constraintStart_toEndOf="@+id/userName"
                    app:srcCompat="@drawable/ic_baseline_settings_24"
                    tools:layout_editor_absoluteY="227dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="10dp"
                tools:ignore="MissingConstraints">

                <Button
                    android:id="@+id/soldListBtn"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/circle_btn"
                    android:text="판매\n내역"
                    tools:layout_editor_absoluteY="284dp" />

                <Button
                    android:id="@+id/buyListBtn"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/circle_btn"
                    android:text="구매\n내역"
                    tools:layout_editor_absoluteY="284dp" />

                <Button
                    android:id="@+id/likeListBtn"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/circle_btn"
                    android:text="찜\n목록"
                    tools:layout_editor_absoluteY="284dp" />

            </LinearLayout>

            <ListView
                android:id="@+id/myPageListView"
                android:layout_width="match_parent"
                android:layout_height="337dp"
                android:padding="16dp"
                android:scrollbars="none"
                tools:ignore="MissingConstraints" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>