<?xml version="1.0" encoding="utf-8"?>
<!-- 상세페이지 화면 (공구)-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Content.DetailViewActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgViewMain2"
            android:layout_width="match_parent"
            android:layout_height="400dp"/>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="350dp"
            android:layout_marginBottom="-30dp"
            card_view:cardCornerRadius="30dp"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="35dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/category2"
                    android:gravity="center|left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="#공구 #나눔" />

                <TextView
                    android:id="@+id/hopeArea2"
                    android:gravity="center|left"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="위치" />

                <TextView
                    android:id="@+id/title2"
                    android:gravity="center|right"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="제목"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/user_id2"
                    android:gravity="center|right"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="아이디"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    android:textSize="13dp" />

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="10dp"
                    card_view:cardCornerRadius="10dp"
                    android:layout_height="100dp"
                    android:layout_width="match_parent"
                    android:backgroundTint="#FEF8FF">

                    <TextView
                        android:id="@+id/content2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="13dp"
                        android:gravity="center"
                        android:text="내용"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="17dp" />

                </androidx.cardview.widget.CardView>



            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:backgroundTint="#94EFEFEF"
            card_view:cardCornerRadius="1dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:padding="4dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/likeIcon2"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    style="?android:attr/borderlessButtonStyle"
                    android:background="@drawable/heart_drawable" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="16dp"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:text="1,100₩"
                        android:textSize="20dp"
                        android:layout_weight="1" />


                    <Button
                        android:id="@+id/goToChat2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:text="채팅" />

                    <Button
                        android:id="@+id/okBtn2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:text="참여" />


                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <ImageButton
            android:id="@+id/backBtn2"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            card_view:srcCompat="@drawable/ic_baseline_arrow_back_24"
            app:tint="@color/white"
            android:background="#00ff0000"/>

    </FrameLayout>


</LinearLayout>